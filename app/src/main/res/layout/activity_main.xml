<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="57dp"
        android:layout_height="74dp"
        android:fontFamily="sans-serif-medium"
        android:text="GO"
        android:textColor="@color/noir"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/text"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:fontFamily="sans-serif-black"
        android:text="WEIGHTLESS"
        android:textColor="@color/theme"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <!-- Image a cliquer -->
    <ImageView
        android:id="@+id/click"
        android:layout_width="184dp"
        android:layout_height="172dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="79dp" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/btt1"
        android:text="Poids"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="670dp" />
    <!--android:onClick="bouton1" -->


    <Button
        android:id="@+id/btn2"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/btt1"
        android:text="Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="670dp" />
    <!--android:onClick="bouton2"-->

    <Button
        android:id="@+id/btn4"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/btt1"
        android:text="Param"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="670dp" />
    <!--android:onClick="bouton4"-->

    <Button
        android:id="@+id/btn3"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/btt1"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="670dp" />
    <!--android:onClick="bouton3"-->


    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="51dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="5dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>