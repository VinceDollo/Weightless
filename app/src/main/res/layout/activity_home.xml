<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_home">

    <include
        android:id="@+id/some_id_if_needed"
        layout="@layout/header"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Fond d'ecran -->
        <TextView
            android:id="@+id/Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weight"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Bienvenue sur l'application Weightless"
            android:layout_marginTop="100px"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Sur cette application, vous n'avez plus a vous prÃ©occuper de la tarification incitative. Weightless vous permet de calculer le cout de vos dechets afin de mieux anticiper vos budgets "
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal" />
            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="650px">

            <ImageView
                android:contentDescription="@string/img_description_fleche"
                android:id="@+id/fleche"
                android:layout_width="231dp"
                android:layout_height="227dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/fleche"
                android:layout_marginLeft="250px"/>

            <TextView
                android:id="@+id/Go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200px"
                android:layout_marginLeft="380px"
                android:text="@string/GO"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_Go1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30px"
                android:layout_marginLeft="250px"
                android:background="@android:color/transparent"
                android:stateListAnimator="@null" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logoPoids"
                    android:layout_width="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/img_description_weight"
                    android:src="@drawable/logo_poids_blanc" />

                <TextView
                    android:id="@+id/NotationPoids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="35dp"
                    android:text="@string/weight"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <Button
                    android:id="@+id/btn_weight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <ImageView
                    android:contentDescription="@string/img_description_settings"
                    android:id="@+id/logoRes"
                    android:layout_width="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_resultat" />

                <TextView
                    android:id="@+id/Notationpoids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="25dp"
                    android:text="@string/results"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <Button
                    android:id="@+id/btn_results"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <ImageView
                    android:contentDescription="@string/img_description_settings"
                    android:id="@+id/logoParam"
                    android:layout_width="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_param" />

                <TextView
                    android:id="@+id/Notationparam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/settings"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <ImageView
                    android:contentDescription="@string/img_description_settings"
                    android:id="@+id/logoConnexion"
                    android:layout_width="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_connexion" />

                <TextView
                    android:id="@+id/Notationconnexion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginLeft="20dp"
                    android:text="@string/profil"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />

                <Button
                    android:id="@+id/btn_connexion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>